{
  "compilerOptions": {
    "allowJs": true,
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./lib/dt",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "listEmittedFiles": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "./src"
  ]
}
